@model IEnumerable<VendasWebAplication.Models.Department>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<form>
    <a asp-action="Create" class="btn btn-secondary">Create New</a>
</form>
<br />
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th scope="col" class="bg-success" style="width: 200px;">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th scope="col" class="text-center, bg-success" style="width: 500px;" >Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="text-left">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
